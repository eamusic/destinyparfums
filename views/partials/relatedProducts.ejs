                            <a href="/pdctodetail/<%= product.id %>"><p class="text-break"><%= product.nombre %></p></a>
                        </div>
                        <span class="price-tag text-center">$<%= product.precio%></span>
                        <div class="btn-center">
                            <a href="/pdctodetail/<%= product.id %>" class="btn btn-small btn-primary">Detalles</a>
                        </div>
                    </div>
                </div>
            <% }); %>
