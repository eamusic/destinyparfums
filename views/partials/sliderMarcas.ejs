<script>
    document.addEventListener("DOMContentLoaded", () => {
      const slider = document.getElementById("slider");

      // Duplicamos el contenido para crear el efecto loop sin cortes
      const sliderContent = slider.innerHTML;
      slider.innerHTML += sliderContent;

      // Esperamos al siguiente frame para que el DOM se actualice y se calculen los tamaños
      requestAnimationFrame(() => {
        // Calculamos el ancho de la primera serie de imágenes:
        const sliderWidth = slider.scrollWidth / 2;
        // Asignamos el ancho calculado a una variable CSS custom (para usar en la animación)
        slider.style.setProperty("--slider-width", `${sliderWidth}px`);
      });
    });
  </script>

